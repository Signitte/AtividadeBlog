<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Unicesumar - Lista de Categorias</title>
    
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    
    
    <link rel="stylesheet" type="text/css" href="styles/usuarios.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Lista de Usuários</h1>
        
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Nome</th>
                    <th>Email</th>
                    <th>Papel</th>
                    <th>Data de Cadastro</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% if (categories.length > 0) { %>
                    <%categories.forEach(function(row){%>
                        <tr>
                            <td><%=row.id%></td>
                            <td><%=row.name%></td>
                            <td><%=row.email%></td>
                            <td><%=row.papel%></td>
                            <td><%=row.dataFormatada%></td>
                            <td class="actions">
                                <a href="#" class="btn btn-link">Editar</a>
                                <form action="/users/<%=row.id%>/delete/" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-link">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    <%})%>
                <%} else {%>
                <tr>
                    <td colspan="6">Nenhuma categoria cadastrada</td>
                </tr>
                <% } %>
            </tbody>
        </table>
        
        <a href="/users/add" class="btn btn-primary mt-3">Cadastrar</a>
    </div>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
